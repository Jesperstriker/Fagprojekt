package API_tests;

/*
 * assertEquals;
import static org.junit.Assert.assertFalse;
import static org.junit.Assert.assertNull;
import static org.junit.Assert.assertTrue;
import static org.junit.Assert.fail;
 */


import static org.junit.Assert.*;
import java.util.List;
import org.junit.Test;

import API.Controller;
import API.UserAccount;
import API_tests.sampleDataSetup;


public class testController extends sampleDataSetup{
	
	@Test
	public void testCreateUser() throws Exception {
		Controller cont = new Controller();
		
		//Creating values for a new user account:
		String pw = "adminPW";
		String username = "Admin";
		String ownerName = "Michael";
		String type = "admin";
		
		//Testing that the user does not already exist:
		assertFalse(cont.userExists(username));
		
		//asking the controller to create the user and add to the DB
		UserAccount user = cont.CreateUserAccount(username,ownerName,type,pw);
		
		//Testing if the newly added user exists:
		assertTrue(cont.UserExists(username));
		
		
		//Checking that the user object is looking as expected:
		assertEquals(user.getPW,pw);
		assertEquals(user.getUsername,username);
		assertEquals(user.getOwnerName,ownerName);
		assertEquals(user.getType,type);
		assertEquals(user.getBankAccounts.size,0);
	}
	
	
	
	@Test
	public void testLogin() throws Exception {
		Controller cont = new Controller();
		
		String pw = "adminPW";
		String userName = "admin";
		String ownerName = "Michael";
		String type = "admin";
		
		assertEquals(cont.getPW(),pw);
		assertEquals(cont.getUserName(),userName);
		assertEquals(cont.getOwnerName(),ownerName);
		
		
		
	}

}
